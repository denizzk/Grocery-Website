@using Grocery.Models.EntityFramework
@model List<Item>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Jumbotron Header -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/images/fruitsb.jpeg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h2>Fresh Fruits</h2>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/images/vegsb.jpeg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h2>Fresh Vegetables</h2>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- Page Features -->
<div class="row text-center">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="~/UploadedImages/@item.ImageUrl" height="250" width="150" alt="">
                <div class="card-body">
                    <h4 class="card-title">@item.Name</h4>
                    <p class="card-text">€@item.Price/@item.SaleWith</p>
                </div>
                <div class="card-footer">
                    @if (item.InStock)
                    {
                        <a href="ShoppingCart/AddToCart/@item.Id" class="btn btn-info btn-lg">
                            <i class="fas fa-shopping-cart"></i>  Add to Cart
                        </a>
                    }
                    else
                    {
                        <a href="" class="btn btn-info btn-lg disabled">
                            Out of Stock
                        </a>
                    }
                </div>
            </div>
        </div>
    }


</div>
<!-- /.row -->
